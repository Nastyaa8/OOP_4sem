<Window x:Class="RichTextBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RichTextBox Demo" Height="300" Width="400">
    <StackPanel Margin="10">
        <RichTextBox Name="richTextBox" Height="150" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Сохранить в файл" Width="150" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Загрузить из файла" Width="150" Margin="5" Click="LoadButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
