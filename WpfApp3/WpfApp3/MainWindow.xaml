<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="Конвертер температур" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

       
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="Цельсий (C)" Margin="5" />
            <TextBox Name="CelsiusInput" Width="100" Margin="5"
                     VerticalContentAlignment="Center"
                     TextChanged="CelsiusInput_TextChanged"/>
        </StackPanel>


        <StackPanel Grid.Column="2" Orientation="Vertical">
            <TextBlock Text="Фаренгейт(F)" Margin="5"/>
            <TextBox Name="FahrenheitInput" Width="100" Margin="5"
                     VerticalContentAlignment="Center"
                     TextChanged="FahrenheitInput_TextChanged"/>
        </StackPanel>
    </Grid>
</Window>
